<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.KotakInfoDuaActivity"
    android:background="@drawable/kotak">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="553dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="85dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="270dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorFontBlack"
                        android:fontFamily="sans-serif"
                        android:text="1. "
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorFontBlack"
                        android:fontFamily="sans-serif"
                        android:text="Mengidentifikasi isi memiliki cara yang dengan mengidentifikasi unsur. "
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorFontBlack"
                        android:fontFamily="sans-serif"
                        android:text="2. "
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorFontBlack"
                        android:fontFamily="sans-serif"
                        android:text="Menceritakan kembali cerita fantasi secara lisan perlu diperhatikan kesesuaian dengan cerita yang dibacanya, intonasi dan kejelasan lafal, kelancaran menyampaikan, kesantunan dan percaya diri "
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorFontBlack"
                        android:fontFamily="sans-serif"
                        android:text="3. "
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorFontBlack"
                        android:fontFamily="sans-serif"
                        android:text="@string/wala"
                        android:textSize="14sp"/>
                </LinearLayout>


            </LinearLayout>



        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|right"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivPrev"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/back_color"></ImageView>
    </LinearLayout>

</RelativeLayout>