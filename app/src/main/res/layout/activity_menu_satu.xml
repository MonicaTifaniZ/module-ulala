<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MenuSatuActivity"
    android:background="@drawable/bgmaterisatu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/yah"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:layout_marginBottom="75dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/imageView">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/judul">
                    </ImageView>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/garis">
                    </ImageView>

                        <LinearLayout
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textSatu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginBottom="4dp"
                                android:text="Teks 1"
                                android:textAlignment="textStart"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textDua"
                                android:layout_above="@id/ivCeritaSatu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginLeft="20dp"
                                android:layout_below= "@id/textSatu"
                                android:text="Bacalah teks cerita fantasi berikut!"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"
                                android:textStyle="italic" />

                            <ImageView
                                android:id="@+id/ivCeritaSatu"
                                android:layout_width="match_parent"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_height="75dp"
                                android:layout_below= "@id/textDua"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/textsatu" />

                            <TextView
                                android:id="@+id/textTiga"
                                android:layout_below= "@id/ivCeritaSatu"
                                android:layout_above= "@id/textEmpat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="Teks 2"
                                android:textAlignment="textStart"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textEmpat"
                                android:layout_below= "@id/textTiga"
                                android:layout_above= "@id/ivCeritaDua"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginLeft="20dp"
                                android:text="Bacalah teks cerita fantasi berikut!"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"
                                android:textStyle="italic" />

                            <ImageView
                                android:id="@+id/ivCeritaDua"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/textdua" />

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/texttiga"
                                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.308"
                                app:layout_constraintStart_toStartOf="parent" />


                            <LinearLayout
                                android:id="@+id/linearLayout2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="40dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                app:layout_constraintBottom_toBottomOf="parent"
                                tools:layout_editor_absoluteX="0dp">

                                <Button
                                    android:id="@+id/btnLatihan1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="30dp"
                                    android:backgroundTint="#E75A4B"
                                    android:text="Latihan 1">

                                </Button>

                                <Button
                                    android:id="@+id/btnLatihan2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#E75A4B"
                                    android:text="Latihan 2">

                                </Button>

                            </LinearLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:layout_gravity="center"
                                android:src="@drawable/judl"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/garis"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginEnd="12dp"
                                android:text="@string/ya"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:layout_marginStart="28dp"
                                android:textStyle="italic" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/textt"/>

                            <ImageView
                                android:id="@+id/sara"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/textsatu" />
                            <ImageView
                                android:id="@+id/nina"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/textdua" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="20dp"
                                android:src="@drawable/yes"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="20dp"
                                android:src="@drawable/texttt"/>

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:layout_marginEnd="22dp"
                                android:layout_marginStart="25dp"
                                android:src="@drawable/textttt"/>


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:backgroundTint="#C3D69B"
                                android:layout_marginTop="4dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="20dp"
                                    android:orientation="vertical">

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/textInputLayoutName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="8dp"
                                        android:hint="Nama"
                                        app:helperText="(Masukkan nama lengkap)"
                                        app:errorEnabled="true">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/editTextNama"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="textEmailAddress" />
                                    </com.google.android.material.textfield.TextInputLayout>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/textInputLayoutAbsen"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Absen"
                                        app:helperText="(Masukkan nomor absen xx)"
                                        app:errorEnabled="true">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/editTextAbsen"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="textEmailAddress" />
                                    </com.google.android.material.textfield.TextInputLayout>


                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/textInputLayoutJawab"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Jawaban"
                                        app:helperText="(Tulis Jawaban)"
                                        app:errorEnabled="true">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/editTextJawab"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="textEmailAddress|textMultiLine"
                                            android:minLines="5"/>

                                    </com.google.android.material.textfield.TextInputLayout>
                                    <Button
                                        android:id="@+id/buttonGo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginBottom="8dp"
                                        android:layout_gravity="right"
                                        android:backgroundTint="#9BBB59"
                                        android:text="Kirim">

                                    </Button>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="start"
                android:gravity="start">

                <ImageView
                    android:id="@+id/ivKotakInfo"
                    android:layout_width="65dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="100dp"
                    android:src="@drawable/kotakinfo" />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/ic_home"/>

        <ImageView
            android:id="@+id/ivMateri"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/materi_ic"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>