<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MenuSatuActivity"
    android:background="@drawable/bgmaterisatu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/yah"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:layout_marginBottom="75dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/imageView">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Mengidentifikasi Unsur\n Cerita Fantasi"
                        android:textColor="@color/colorFontBlack"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/garis">
                    </ImageView>

                        <LinearLayout
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="sans-serif"
                                android:text="@string/teks_1"
                                android:textColor="@color/colorFontBlack"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textDua"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="sans-serif"
                                android:text="Bacalah cerita fantasi berikut!"
                                android:textColor="@color/colorFontBlack"
                                android:textSize="14sp"
                                android:textStyle="italic" />



                            <ImageView
                                android:id="@+id/ivCeritaSatu"
                                android:layout_width="match_parent"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_height="75dp"
                                android:layout_below= "@id/textDua"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/textsatu" />

                            <TextView
                                android:id="@+id/textTiga"
                                android:layout_below= "@id/ivCeritaSatu"
                                android:layout_above= "@id/textEmpat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="Teks 2"
                                android:textAlignment="textStart"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textEmpat"
                                android:layout_below= "@id/textTiga"
                                android:layout_above= "@id/ivCeritaDua"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="sans-serif"
                                android:text="Bacalah teks cerita fantasi berikut!"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="italic" />

                            <ImageView
                                android:id="@+id/ivCeritaDua"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/textdua" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:textColor="@color/colorFontBlack"
                                android:text="@string/text_materi_satu"
                                android:textSize="14sp"
                                android:justificationMode="inter_word"
                                android:layout_marginBottom="10dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.308"
                                app:layout_constraintStart_toStartOf="parent" />


                            <LinearLayout
                                android:id="@+id/linearLayout2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="40dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                app:layout_constraintBottom_toBottomOf="parent"
                                tools:layout_editor_absoluteX="0dp">

                                <Button
                                    android:id="@+id/btnLatihan1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="30dp"
                                    android:backgroundTint="#E75A4B"
                                    android:text="Latihan 1"
                                    android:textColor="@color/colorFontWhite">

                                </Button>

                                <Button
                                    android:id="@+id/btnLatihan2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#E75A4B"
                                    android:text="Latihan 2"
                                    android:textColor="@color/colorFontWhite">

                                </Button>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="Menjelaskan Jenis\nCerita Fantasi"
                                android:textColor="@color/colorFontBlack"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/garis"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginEnd="20dp"
                                android:fontFamily="sans-serif"
                                android:text="@string/menu_satu_text"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:layout_marginStart="20dp"
                                android:textStyle="italic" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:backgroundTint="#FAC090"
                                android:layout_marginTop="4dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="sans-serif"
                                    android:justificationMode="inter_word"
                                    android:padding="4dp"
                                    android:paddingStart="3dp"
                                    android:paddingEnd="3dp"
                                    android:text="Jenis cerita fantasi dibagi menjadi dua yaitu berdasarkan kesesuaiannya dalam kehidupan nyata dan berdasarkan latarnya. Cerita fantasi berdasarkan kesesuaian dalam kehidupan nyata dibagi menjadi dua yakni fantasi total dan fantasi irisan. Kemudian cerita fantasi berdasarkan latarnya juga dibagi menjadi dua yakni cerita fantasi sezaman dan cerita fantasi lintas waktu. Untuk pemahaman lebih rinci, silahkan baca materi pada Kotak Materi!."
                                    android:textColor="@color/colorFontBlack"
                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.308"
                                    app:layout_constraintStart_toStartOf="parent" />


                            </androidx.cardview.widget.CardView>



                        </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="start"
                android:gravity="start">

                <ImageView
                    android:id="@+id/ivKotakInfo"
                    android:layout_width="70dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="100dp"
                    android:src="@drawable/kotakinfo" />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/ic_home"/>

        <ImageView
            android:id="@+id/ivMateri"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/materi_ic"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>