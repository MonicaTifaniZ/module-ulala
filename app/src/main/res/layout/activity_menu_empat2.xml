<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MenuEmpat"
    android:background="@drawable/bgmaterisatu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/empat"
            android:contentDescription="TODO" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:layout_marginBottom="75dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/imageView">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="Mengidentifikasi Gagasan \nKreatif dan Merencanakan \nCerita Fantasi"
                        android:textColor="@color/colorFontBlack"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/garis"
                        android:contentDescription="TODO">
                    </ImageView>

                    <LinearLayout
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorFontBlack"
                            android:text="Pada kegiatan kali adalah mengidentifikasi gagasan kreatif cerita fantasi dan merencanakan cerita fantasi. Sebelum mengerjakan baca contoh pada kotak materi! Kemudian baca kedua teks berikut!"
                            android:textSize="14sp"
                            android:justificationMode="inter_word"
                            android:layout_marginStart="17dp"
                            android:layout_marginEnd="17dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp">

                            <ImageView
                                android:id="@+id/ivCeritaAlien"
                                android:layout_width="100dp"
                                android:layout_height="65dp"
                                android:layout_marginStart="20dp"
                                android:src="@drawable/ceritalien"/>

                            <ImageView
                                android:id="@+id/ivCeritaMona"
                                android:layout_width="100dp"
                                android:layout_height="65dp"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/ceritamona"/>

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:backgroundTint="#FAC090"
                            android:layout_marginTop="4dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="sans-serif"
                                android:justificationMode="inter_word"
                                android:padding="6dp"
                                android:text="Setelah membaca, kerjakan soal berikut pada lembar kerja siswa!\n1.\tTentukanlah gagasan kreatif tersebut!\n2.\tBuatlah rancangan cerita yang akan kmu buat dengan menjadikan kedua teks di atas sebagai referensi!"
                                android:textColor="@color/colorFontBlack"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.308"
                                app:layout_constraintStart_toStartOf="parent" />


                        </androidx.cardview.widget.CardView>


                        <!--     Input Satu       -->

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_gravity="left"
                            android:foregroundGravity="left"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/empad"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:backgroundTint="#FA996E"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="12dp"
                                android:orientation="vertical">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/textInputLayoutName1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:hint="Nama"
                                    app:helperText="(Masukkan nama lengkap)"
                                    app:errorEnabled="true">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/editTextNama1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textEmailAddress" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/textInputLayoutAbsen1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Absen"
                                    app:helperText="(Masukkan nomor absen xx)"
                                    app:errorEnabled="true">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/editTextAbsen1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textEmailAddress" />
                                </com.google.android.material.textfield.TextInputLayout>


                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/textInputLayoutJawab1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Jawaban"
                                    app:helperText="(Tulis jawaban atau unggah file)"
                                    app:errorEnabled="true">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/editTextJawab1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textEmailAddress|textMultiLine"
                                        android:minLines="5"/>

                                </com.google.android.material.textfield.TextInputLayout>

                                <Button
                                    android:id="@+id/buttonAttach"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="8dp"
                                    android:backgroundTint="#F75E3F"
                                    android:text="Pilih File">

                                </Button>

                                <TextView
                                    android:id="@+id/tvAttachment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_attach"
                                    android:visibility="gone"
                                    android:layout_marginBottom="10dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <Button
                            android:id="@+id/buttonKirim"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="right"
                            android:backgroundTint="#F75E3F"
                            android:layout_marginEnd="18dp"
                            android:layout_marginBottom="8dp"
                            android:text="Kirim"/>


                        <!--      Dua Mengembangkan       -->

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/empate"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/garis"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="17dp"
                            android:text="Kegiatan terakhir pada kompetensi ini yakni menulis sebuah cerita fantasi dengan mengikuti tahap berikut!"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            android:layout_marginStart="17dp"
                            android:textStyle="italic" />


                        <ImageView
                            android:id="@+id/sara"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/empatf" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/empatg"/>

                        <!--     Input Dua Mengembangkan       -->

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_gravity="left"
                            android:foregroundGravity="left"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/empad"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:backgroundTint="#FA996E"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="12dp"
                                android:orientation="vertical">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/textInputLayoutName2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:hint="Nama"
                                    app:helperText="(Masukkan nama lengkap)"
                                    app:errorEnabled="true">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/editTextNama2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textEmailAddress" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/textInputLayoutAbsen2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Absen"
                                    app:helperText="(Masukkan nomor absen xx)"
                                    app:errorEnabled="true">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/editTextAbsen2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textEmailAddress" />
                                </com.google.android.material.textfield.TextInputLayout>


                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/textInputLayoutJawab2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Jawaban"
                                    app:helperText="(Tulis jawaban atau unggah file)"
                                    app:errorEnabled="true">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/editTextJawab2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textEmailAddress|textMultiLine"
                                        android:minLines="5"/>

                                </com.google.android.material.textfield.TextInputLayout>

                                <Button
                                    android:id="@+id/buttonAttach2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="8dp"
                                    android:backgroundTint="#F75E3F"
                                    android:text="Pilih File">

                                </Button>

                                <TextView
                                    android:id="@+id/tvAttachment2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_attach"
                                    android:visibility="gone"
                                    android:layout_marginBottom="10dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <Button
                            android:id="@+id/buttonKirim2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="right"
                            android:layout_marginEnd="18dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="#F75E3F"
                            android:text="Kirim"/>


                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_gravity="left">

                <ImageView
                    android:id="@+id/ivKotakInfo"
                    android:layout_width="65dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="100dp"
                    android:src="@drawable/kotakinfo" />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="100dp"
            android:src="@drawable/ic_home"/>

        <ImageView
            android:id="@+id/ivMateri"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/materi_ic"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>